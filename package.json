{
  "name": "@pskfyi/commitlint-config",
  "version": "1.0.0",
  "description": "Opinionated shareable commitlint config.",
  "main": "commitlint.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pskfyi/commitlint-config.git"
  },
  "keywords": [
    "commitlint",
    "commitlint-config"
  ],
  "author": "Patrick Keenan <patrick.keenan.fyi@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pskfyi/commitlint-config/issues"
  },
  "homepage": "https://github.com/pskfyi/commitlint-config#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "husky": "^6.0.0",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "commitlint:pass": "commitlint --edit \"tests/pass.txt\" -V",
    "commitlint:fail": "commitlint --edit \"tests/fail.txt\" -V",
    "lint": "prettier -c .",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "volta": {
    "node": "15.14.0",
    "yarn": "1.22.10"
  }
}
